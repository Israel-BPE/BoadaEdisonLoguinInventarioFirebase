<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:padding="16dp"
    tools:context=".ProductoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_rounded_corners"
        android:padding="24dp">

        <!-- C贸digo del Producto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C贸digo del Producto"
            android:textColor="#FFFF0000"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese c贸digo"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#80FFFFFF"
            android:backgroundTint="#FFFF0000"
            android:padding="12dp"
            android:inputType="text"/>

        <!-- Nombre del Producto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Producto"
            android:textColor="#FFFF0000"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese nombre del producto"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#80FFFFFF"
            android:backgroundTint="#FFFF0000"
            android:padding="12dp"/>

        <!-- Stock y Precio Costo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Stock -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stock"
                    android:textColor="#FFFF0000"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etStock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cantidad"
                    android:textColor="#FFFFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:backgroundTint="#FFFF0000"
                    android:padding="12dp"
                    android:inputType="number"/>
            </LinearLayout>

            <!-- Precio Costo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio Costo"
                    android:textColor="#FFFF0000"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etPrecioCosto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0.00"
                    android:textColor="#FFFFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:backgroundTint="#FFFF0000"
                    android:padding="12dp"
                    android:inputType="numberDecimal"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Precio Venta -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio Venta"
            android:textColor="#FFFF0000"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etPrecioVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#80FFFFFF"
            android:backgroundTint="#FFFF0000"
            android:padding="12dp"
            android:inputType="numberDecimal"/>

        <!-- Botones de acci贸n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guardar"
                android:textColor="#FFFFFFFF"
                android:backgroundTint="#FFFF0000"
                android:textAllCaps="false"
                android:padding="12dp"/>

            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buscar"
                android:layout_marginStart="8dp"
                android:textColor="#FFFF0000"
                android:backgroundTint="#00FFFFFF"
                android:textAllCaps="false"
                android:padding="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actualizar"
                android:textColor="#FFFFFFFF"
                android:backgroundTint="#FF333333"
                android:textAllCaps="false"
                android:padding="12dp"/>

            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Borrar"
                android:layout_marginStart="8dp"
                android:textColor="#FFFFFFFF"
                android:backgroundTint="#FF333333"
                android:textAllCaps="false"
                android:padding="12dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:layout_marginTop="16dp"
            android:textColor="#FFFF0000"
            android:backgroundTint="#00FFFFFF"
            android:textAllCaps="false"
            android:padding="12dp"/>
    </LinearLayout>
</ScrollView>