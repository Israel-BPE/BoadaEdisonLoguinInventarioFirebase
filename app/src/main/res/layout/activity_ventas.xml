<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    tools:context=".VentasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/bg_rounded_corners"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PUNTO DE VENTA"
            android:textColor="#FFFF0000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Código Input -->
        <EditText
            android:id="@+id/etCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese código"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#80FFFFFF"
            android:backgroundTint="#FFFF0000"
            android:padding="12dp"/>

        <!-- Buscar Button -->
        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="BUSCAR PRODUCTO"
            android:textColor="#FFFFFFFF"
            android:backgroundTint="#FFFF0000"
            android:textAllCaps="false"
            android:padding="12dp"/>

        <!-- Product Info -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Nombre producto:"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock disponible: 0"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio: $0.00"
            android:textColor="#FFFF0000"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Cantidad Input -->
        <EditText
            android:id="@+id/etCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Ingrese cantidad"
            android:inputType="number"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#80FFFFFF"
            android:backgroundTint="#FFFF0000"
            android:padding="12dp"/>

        <!-- Vender Button -->
        <Button
            android:id="@+id/btnVender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="PROCESAR VENTA"
            android:textColor="#FFFFFFFF"
            android:backgroundTint="#FFFF0000"
            android:textAllCaps="false"
            android:padding="12dp"/>

        <!-- Total -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Total a pagar: $0.00"
            android:textColor="#FFFF0000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="end"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>