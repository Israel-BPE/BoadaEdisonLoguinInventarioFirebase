<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    tools:context=".PersonaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_corners"
            android:layout_margin="16dp">

            <!-- Cédula -->
            <EditText
                android:id="@+id/etCedula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese cédula"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#80FFFFFF"
                android:backgroundTint="#FFFF0000"
                android:padding="12dp"/>

            <!-- Nombre -->
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Ingrese nombre"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#80FFFFFF"
                android:backgroundTint="#FFFF0000"
                android:padding="12dp"/>

            <!-- RadioGroup Género -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Género:"
                android:textColor="#FFFF0000"
                android:textSize="16sp"/>

            <RadioGroup
                android:id="@+id/rgGenero"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hombre"
                    android:textColor="#FFFFFFFF"
                    android:buttonTint="#FFFF0000"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Mujer"
                    android:textColor="#FFFFFFFF"
                    android:buttonTint="#FFFF0000"/>
            </RadioGroup>

            <!-- Spinner País -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="País:"
                android:textColor="#FFFF0000"
                android:textSize="16sp"/>

            <Spinner
                android:id="@+id/spinnerPais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFFF0000"/>

            <!-- Provincia -->
            <EditText
                android:id="@+id/etProvincia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Ingrese provincia"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#80FFFFFF"
                android:backgroundTint="#FFFF0000"
                android:padding="12dp"/>

            <!-- Correo -->
            <EditText
                android:id="@+id/etCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Ingrese correo"
                android:inputType="textEmailAddress"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#80FFFFFF"
                android:backgroundTint="#FFFF0000"
                android:padding="12dp"/>

            <!-- Botón Actualizar -->
            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Actualizar"
                android:textColor="#FFFFFFFF"
                android:backgroundTint="#FFFF0000"
                android:textAllCaps="false"
                android:padding="12dp"/>

            <!-- Botón Regresar -->
            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Regresar al inicio"
                android:textColor="#FFFF0000"
                android:backgroundTint="#00FFFFFF"
                android:textAllCaps="false"
                android:padding="12dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>